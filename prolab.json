{
	"project":"eatyouup",
	"services":[
	{
		"id":"frontend",
		"apps":[
		{
			"id":"tomcat",
			"domain":{
				"uri":"eatyouup.sloppy.zone",
				"type":"HTTP"
			},
			"instances":1,
			"mem":512,
			"image":"badetitou/eatyouup",
			"force_pull_image": true,
			"port_mappings": [
			{
				"container_port": 8080
			}
			]
				,
				"env":{
					"POSTGRES_PASSWORD":"titou",
					"POSTGRES_USER":"titou"
				},
				"dependencies":[
					"../../backend/postgres"
					]
		}
		]
	},
	{
		"id":"backend",
		"apps":[
		{
			"id":"postgres",
			"instances":1,
			"mem":512,
			"image":"postgres",
			"env":{
					"POSTGRES_PASSWORD":"titou",
					"POSTGRES_USER":"titou",
					"PGDATA":"/var/lib/postgresql/data/pgdata"
				}
		}
		]
	}	
	]
}
